# ============================================
#              APP CONFIGURATION              
# ============================================

# Logging
LOG_LEVEL=INFO                              # DEBUG | INFO | WARNING | ERROR | CRITICAL

# Environment
ENVIRONMENT=production                      # development | production
ORGANIZATION_NAME=OrgName                   # Your organization name

# Network Configuration
HOST=0.0.0.0                                # Bind address (0.0.0.0 = all interfaces)
PORT=5000                                   # Application port (internal)
CONTAINER_PORT=5000                         # External Docker port (change if port 5000 is occupied)

# ============================================
#           SECURITY CONFIGURATION
# ============================================
# DO NOT use default passwords in production!
# ============================================

# HTTP Configuration
HTTPS=false                                 # Change to true for secure cookies, HSTS headers

# Admin Panel
ADMIN_PATH=/admin                           # Admin panel URL path
ADMIN_USERNAME=                             # REQUIRED: Set unique username
ADMIN_PASSWORD=                             # REQUIRED: Use strong password

# JWT Configuration
JWT_ISSUER=StatusPage                       # Token issuer identifier
JWT_EXPIRES_IN=3600                         # Token expiry in seconds (3600 = 1 hour)
JWT_ALGORITHM=HS256                         # Signing algorithm (HS256 recommended)

# Cookie Configuration
COOKIE_KEY=token                            # Cookie name for authentication

# PostgreSQL Database
POSTGRES_HOST=postgres                      # Hostname (use 'postgres' for Docker, 'localhost' for manual)
POSTGRES_USER=statuspage                    # Database username
POSTGRES_PASSWORD=                          # REQUIRED: Use strong password
POSTGRES_DB=statuspage                      # Database name

# ============================================
# Docker-specific notes:
# - POSTGRES_HOST should be 'postgres' (service name)
# Manual deployment notes:
# - POSTGRES_HOST should be 'localhost' or IP
# - Ensure PostgreSQL is running and accessible
# ============================================
